<settings>
    <setting propertyKey="@Properties.showSteps" title="Show Steps">
        <settingConfig type="boolean" />
    </setting>

    <setting propertyKey="@Properties.stepsColor" title="Steps Color">
        <settingConfig type="list">
            <listEntry value="0x555555">@Strings.ColorDarkGray</listEntry>
            <listEntry value="0x0000FF">@Strings.ColorBlue</listEntry>
            <listEntry value="0xFF0000">@Strings.ColorRed</listEntry>
            <listEntry value="0xFFFFFF">@Strings.ColorWhite</listEntry>
            <listEntry value="0x008500">@Strings.ColorGreen</listEntry>
            <listEntry value="0xFFBF00">@Strings.ColorOrange</listEntry>
            <listEntry value="0xFFF000">@Strings.ColorYellow</listEntry>
        </settingConfig>
    </setting>
</settings>