<settings>
    <setting propertyKey="@Properties.showBattery" title="Show Battery Level">
        <settingConfig type="boolean" />
    </setting>

    <setting propertyKey="@Properties.batteryDisplayMode" title="@Strings.BatteryDisplayTitle">
        <settingConfig type="list">
            <listEntry value="0">@Strings.BatteryDisplayIcon</listEntry>
            <listEntry value="1">@Strings.BatteryDisplayPercent</listEntry>
            <listEntry value="2">@Strings.BatteryDisplayDays</listEntry>
        </settingConfig>
    </setting>

    <setting propertyKey="@Properties.showTime" title="Show Time">
        <settingConfig type="boolean" />
    </setting>

    <setting propertyKey="@Properties.timeColor" title="Time Color">
        <settingConfig type="list">
            <listEntry value="1">@Strings.ColorWhite</listEntry>
            <listEntry value="2">@Strings.ColorDarkGray</listEntry>
            <listEntry value="3">@Strings.ColorBlue</listEntry>
            <listEntry value="4">@Strings.ColorRed</listEntry>
            <listEntry value="5">@Strings.ColorGreen</listEntry>
            <listEntry value="6">@Strings.ColorOrange</listEntry>
            <listEntry value="7">@Strings.ColorYellow</listEntry>
        </settingConfig>
    </setting>

